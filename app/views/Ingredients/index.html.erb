  <%= link_to "New Ingredient", new_ingredient_path %>

  <%@ingredients.in_groups_of(2, false).each do |group| %>
    <div class="row">
        <% group.each do |ingredient| %>
      <div class="col-md-6">
          <h2><%= ingredient.name %></h2>
          <h3><%= ingredient.group %></h3>
            
            <%ingredient.recipes.each do |recipe| %>
                <p><%= recipe.name %>

                   <%recipe.quantities.each do |quantity| %>
                      , Quantity of <%=ingredient.name.pluralize%>: <%=quantity.amount%></p>
                    <%end%>
            <%end%>
            
        
      </div>
      <%end %>
  </div>
  <% end %>
