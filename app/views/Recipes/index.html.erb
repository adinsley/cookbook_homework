<%@recipes.in_groups_of(2, false).each do |group| %>
  <div class="row">
      <% group.each do |recipe| %>
    <div class="col-md-6">
        <h2><%= recipe.name %></h2>
        <%= link_to "See #{recipe.name.pluralize} details", recipe_path(recipe), class: "btn" %>
    </div>
    <% end %>
</div>
<% end %>
